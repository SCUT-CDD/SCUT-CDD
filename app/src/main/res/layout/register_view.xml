<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <View
        android:id="@+id/register_background1"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:background="@drawable/beach_background" />

    <View
        android:id="@+id/register_background2"
        android:layout_width="300dp"
        android:layout_height="180dp"
        android:background="@drawable/miwhite"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="5dp"
        android:layout_below="@id/register_background1"
        android:layout_alignTop="@id/register_background1"
        android:layout_alignBottom="@id/register_background1"
        android:layout_alignLeft="@id/register_background1"
        android:layout_alignRight="@id/register_background1"/>

    <TextView
        android:id="@+id/title_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/trapezoid_background"
        android:autoSizeTextType="uniform"
        android:text="登录/注册"
        android:gravity="center"
        android:textColor="#D8860D"
        android:layout_below="@id/register_background1"
        android:layout_alignTop="@id/register_background1"
        android:layout_alignLeft="@id/register_background1"
        android:layout_marginLeft="100dp"/>

    <TextView
        android:id="@+id/prompt_register"
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="请输入昵称"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="#D8860D"
        android:layout_alignLeft="@id/register_background1"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@id/register_background1"
        android:layout_marginTop="40dp" />

    <EditText
        android:id="@+id/input_nickName"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:autoSizeTextType="uniform"
        android:layout_alignLeft="@id/register_background1"
        android:layout_marginLeft="50dp"
        android:layout_alignTop="@+id/register_background1"
        android:layout_marginTop="70dp" />

    <ImageButton
        android:id="@+id/accept_nickName"
        android:layout_width="70dp"
        android:layout_height="45dp"
        android:src="@drawable/accept_button"
        android:layout_alignLeft="@+id/register_background1"
        android:layout_marginLeft="115dp"
        android:layout_alignTop="@+id/input_nickName"
        android:layout_marginTop="50dp" />

    <ImageButton
        android:id="@+id/closeRegister"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignTop="@+id/register_background1"
        android:layout_alignRight="@+id/register_background1"
        android:src="@drawable/exit_button"/>

</RelativeLayout>