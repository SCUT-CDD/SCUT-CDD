<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageButton
        android:id="@+id/chatting_button"
        android:layout_width="75dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:src="@drawable/chat_button" />

    <View
        android:id="@+id/chatting_background"
        android:layout_width="200dp"
        android:layout_height="180dp"
        android:layout_alignBottom="@+id/chatting_button"
        android:layout_marginBottom="30dp"
        android:layout_alignRight="@+id/chatting_button"
        android:background="@drawable/chat_background"
        android:visibility="gone"/>

    <Button
        android:id="@+id/message1"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/chatting_background"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/chatting_background"
        android:layout_marginTop="10dp"
        android:backgroundTint="#99CCFF"
        android:text="大家好，很高兴见到各位！"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/message2"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/chatting_background"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/chatting_background"
        android:layout_marginTop="50dp"
        android:backgroundTint="#99CCFF"
        android:text="你是GG还是MM"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/message3"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/chatting_background"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/chatting_background"
        android:layout_marginTop="90dp"
        android:backgroundTint="#99CCFF"
        android:text="快点吧，我等的花都谢了"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:visibility="gone"/>

    <Button
        android:id="@+id/message4"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@id/chatting_background"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@id/chatting_background"
        android:layout_marginTop="130dp"
        android:backgroundTint="#99CCFF"
        android:text="真牛！"
        android:gravity="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/messageFromPlayer1"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/send_message_background"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/messageFromPlayer2"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:background="@drawable/send_message_background"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/messageFromPlayer3"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="180dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/send_message_background"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/messageFromPlayer4"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="250dp"
        android:background="@drawable/send_message_background"
        android:gravity="center"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:visibility="gone"/>

</RelativeLayout>